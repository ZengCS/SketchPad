<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:orientation="horizontal"
    android:padding="0dp">

    <!--滑块-->
    <LinearLayout
        android:layout_width="420px"
        android:layout_height="128px"
        android:background="@drawable/bg_round_gray_top"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_auto_basewidth="height">

        <SeekBar
            android:id="@+id/id_sb_line_size"
            android:layout_width="330px"
            android:layout_height="wrap_content"
            android:max="50" />

        <TextView
            android:id="@+id/id_tv_line_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60px"
            android:text="10"
            android:textSize="30px" />
    </LinearLayout>

    <!--颜色-->
    <LinearLayout
        android:layout_width="570px"
        android:layout_height="128px"
        android:layout_marginLeft="10px"
        android:background="@drawable/bg_round_gray_top"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_auto_basewidth="height">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_rv_tool_colors"
            style="@style/disableSplitMotion"
            android:layout_width="518px"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>